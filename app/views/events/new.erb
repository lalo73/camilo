
<% content_for :additional_css do %>
<%= stylesheet_link_tag 'datepicker.css' %>
<% end %>

<div class="well">
  <form class="centered" method="post" action='/events/create'>
    <%= csrf_token_field %>
    <h1>Detalles del evento</h1>
    <input type="text" id="event[name]" name="event[name]" placeholder="Nombre del evento" class="large" value="<%= @event.name %>"/>
    <input type="text" id="event[max]" name="event[max]" placeholder="Cant. de participantes" value="<%= @event.max %>"/>
    <input type="text" id="event_date" name="event[date]" placeholder="fecha:aaaa-mm-dd" value="<%= render_date(@event.date) %>" />
    <a href="#" id="event_date_button" class="add-on"><i class="icon-calendar"></i></a>
    <input type="text" id="event[members]" name="event[members]" placeholder="Participantes" class="large" value="<%= @event.members %>"/>
    <input type="text" id="event[tag]" name="event[tag]" placeholder="Tag del evento" class="large" value="<%= @event.tag %>"/>
    <input type="text" id="event[video_link]" name="event[video_link]" placeholder="Link al video" class="large" value="<%= @event.video_link %>"/>
    <label for="event[requires_auth]">Requiere autenticacion</label>
    <input type="checkbox" id="event[requires_auth]" name="event[requires_auth]" placeholder="Tag del evento"/>
    <br>
    <input type="submit" class="btn big" id="saveButton" value="Guardar" />
    <% if flash[:error] %>
        <div class="alert alert-error">
          <%=flash[:error]   %>
        </div>
    <% end %>
  </form>
</div>

<% content_for :additional_js do %>
  <%= javascript_include_tag 'bootstrap-datepicker.js' %>
  <%= javascript_include_tag 'event_form.js' %>
<% end %>
